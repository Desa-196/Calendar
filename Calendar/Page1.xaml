<Page x:Class="Calendar.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Calendar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="ExpanderPeople" Grid.Column="0" Text="12:22" Height="30" Width="100" Margin="10,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Popup x:Name="PopupPeple"
                       AllowsTransparency="True"
                       Placement="Bottom"
                       PlacementTarget="{Binding ElementName=ExpanderPeople}"
                       StaysOpen="False">
            <Grid Width="150" HorizontalAlignment="Stretch" Height="150">
                <TextBlock x:Name="TextBlockPeople2"
                                   Background="Green"
                                   TextWrapping="Wrap" />
            </Grid>
        </Popup>

    </Grid>
</Page>
